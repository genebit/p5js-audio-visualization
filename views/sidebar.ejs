<div class="sidebar shadow-lg px-5 py-3 border border-2 border-primary">
	<div class="d-flex justify-content-between mb-3">
		<button onclick="toggleSidebar()" class="btn bg-transparent shadow-none border-0 px-0">
			<i id="toggleBarIcon" class="fa-solid fa-angles-right fa-2xl"></i>
		</button>
		<button onclick="toggleThemeMode()" class="btn bg-transparent shadow-none border-0 px-0">
			<img id="themeSliderIcon" src="/public/assets/svg/slider-light-mode.svg" alt="" />
		</button>
	</div>
	<div class="controls">
		<div class="d-flex flex-column gap-3 position-relative">
			<button class="btn btn-primary py-3 px-5" id="inviteButton">
				<div class="d-flex justify-content-between align-items-center">
					<div class="text-start text-white">
						<h3 class="p-0 m-0 text-white">Invite your friends!</h3>
						Unlock more spectrum shapes.
					</div>
					<img src="/public/assets/svg/gmail.svg" width="50" alt="" />
				</div>
			</button>
			<div class="card shadow border border-2 border-primary">
				<div class="card-body p-4">
					<h3 class="text-uppercase text-primary">Customization <i class="fa-solid fa-palette text-accent"></i></h3>
					<p class="text-white-dm">Design your own audio spectrum!</p>
					<div class="row">
						<div class="col-md-4">
							<p class="text-white-dm text-nowrap">Frequency Bands</p>
						</div>
						<div class="col-md-8">
							<div class="d-flex align-items-center gap-3">
								<input id="freqBands" class="accent-color-primary w-100" type="range" min="0" max="6" step="1" value="3" />
								<label id="freqBandsLabel" class="text-white-dm text-nowrap">128</label>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-4">
							<p class="text-white-dm text-nowrap">Smoothing</p>
						</div>
						<div class="col-md-8">
							<div class="d-flex align-items-center gap-3">
								<input id="freqBandSmoothing" class="accent-color-primary w-100" type="range" min="0" max="0.9" step="0.1" value="0.8" />
								<label id="freqBandSmoothingLabel" class="text-white-dm text-nowrap">0.8</label>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-4">
							<p class="text-white-dm text-nowrap">Spectrum Style</p>
						</div>
						<div class="col-md-8">
							<select id="spectrumStyle" class="form-select" style="width: 100%">
								<option value="Rectangle">Rectangle</option>
								<option value="Wavelength">Wavelength</option>
								<option value="Ellipse">Ellipse</option>
								<option value="Hypnosis">Hypnosis</option>
								<option value="Clouds">Clouds</option>
								<option value="Mirror">Mirror</option>
							</select>
						</div>
					</div>
				</div>
			</div>
			<div class="card shadow border border-2 border-primary">
				<div class="card-body p-4">
					<div class="col-md-12">
						<h3 class="text-uppercase text-primary">Audio Source <i class="fa-solid fa-volume-off text-accent"></i></h3>
						<p class="text-white-dm">Pick an audio source to visualize.</p>
					</div>
					<div class="col-md-12 d-flex flex-column gap-3">
						<div class="d-flex gap-4">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="audioSource" id="micSource" onclick="$('#audioControls').slideUp(200);" value="mic" />
								<label class="form-check-label text-nowrap text-white-dm" for="micSource">Microphone</label>
							</div>
							<div class="form-check">
								<input class="form-check-input" type="radio" name="audioSource" id="fileSource" onclick="$('#audioControls').slideDown(200)" value="file" />
								<label class="form-check-label text-nowrap text-white-dm" for="fileSource">Audio File</label>
							</div>
						</div>
						<div id="audioControls" style="display: none">
							<div class="d-flex flex-column gap-3">
								<input type="file" class="form-control form-control-sm w-100" name="" id="audioFile" />
								<div class="d-flex gap-3 align-items-center justify-content-between">
									<div style="width: 80%">
										<div class="d-flex align-items-center gap-3">
											<label id="songTrackTime" class="text-nowrap text-white-dm" for="">00:00</label>
											<input disabled id="songTrack" class="w-100" type="range" min="0" max="100" step="1" value="0" />
										</div>
									</div>
									<div>
										<button disabled id="playBtn" onclick="playSong(this)" type="button" class="btn btn-outline-primary">
											<i class="fa-solid fa-play"></i>
										</button>
									</div>
								</div>
							</div>
						</div>
						<button onclick="startAudioContext(this)" class="btn btn-primary w-100 fw-bold text-white">Enable Audio Source</button>
					</div>
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-between text-dark mt-5">
			<span class="text-white-dm" id="creditText">Powered by <b class="text-white-dm">p5js</b> </span>
			<div class="text-white-dm">
				<span class="text-white-dm">@GeneBit 2020</span>
				<a role="button" href="https://github.com/genebit" class="bg-transparent border-0 shadow-none">
					<i class="fa-brands fa-github text-white-dm"></i>
				</a>
			</div>
		</div>
	</div>
	<div class="position-absolute top-0 w-100" style="z-index: -10">
		<img class="waves-ver-img w-100" src="/public/assets/svg/waves-ver-light-mode.svg" alt="" />
	</div>
</div>
